Vagrant.configure("2") do |config|
  config.vm.define "k8s" do |k8s|
    k8s.vm.box = "ybagoulla/k8s-centos7"
    k8s.vm.box_url = "ybagoulla/k8s-centos7"
    k8s.vm.hostname = "k8s"
    k8s.vm.network "private_network", ip: "10.0.0.11"
    k8s.vm.provider "virtualbox" do |v|
      v.memory = 4096
      v.cpus = 2
    end
  end

  config.vm.define "mcastsrc" do |mcastsrc|
    mcastsrc.vm.box = "ybagoulla/docker-centos7"
    mcastsrc.vm.box_url = "ybagoulla/docker-centos7"
    mcastsrc.vm.hostname = "mcastsrc"
    mcastsrc.vm.network "private_network", ip: "10.0.0.12"
  end

end

